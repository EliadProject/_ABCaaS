<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <tag>Check Result</tag>
        <one-of>
          <item> check result </item>
          <item> checks result</item>
          <item> double check</item>
        </one-of>
      </item>
      <item>
        <tag>Erase Screen</tag>
        <one-of>
          <item> clean screen </item>
          <item> erase screen </item>
        </one-of>
      </item>
      <item>
        <tag>Toggle</tag>
        <one-of>
          <item> toggle </item>
          <item> switch </item>
          <item> toggles</item>    
        </one-of>
      </item>
    </one-of>
  </rule>
</grammar>