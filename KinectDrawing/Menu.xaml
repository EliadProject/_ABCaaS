<Window x:Class="KinectDrawing.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectDrawing"
        mc:Ignorable="d"
        Title="ABCaaS App" Height="512" Width="1024" WindowState="Normal" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images\bg.png"/>
        </Grid.Background>

        <Image Height="138" Margin="388,-5,404,350" Source="images\logo.png"/>

        <Image Height="507" Margin="387,-125,405,101" Source="images\slogen.png"/>

        <Button Content=""
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="325,216,0,0"
                Width="100"
                Height="100"
                Click="Button_Click"
                Style="{StaticResource MyButton}">
            <Button.Background>
                <ImageBrush ImageSource="images\play.png"/>
            </Button.Background>
        </Button>

        <Button Content=""
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="454,216,0,0"
                Width="100"
                Height="100"
                Click="Button_Click"
                Style="{StaticResource MyButton}">
            <Button.Background>
                <ImageBrush ImageSource="images\info.png"/>
            </Button.Background>
        </Button>

        <Button Content=""
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="575,216,0,0"
                Width="100"
                Height="100"
                Click="ExitApp"
                Style="{StaticResource MyButton}">
            <Button.Background>
                <ImageBrush ImageSource="images\exit.png"/>
            </Button.Background>
        </Button>

        <Button Content=""
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="26,389,0,0"
                Width="60"
                Height="60"
                Click="Button_Click"
                Style="{StaticResource MyButton}">
           
            <Button.Background>
                <ImageBrush ImageSource="images\settings.png"/>
            </Button.Background>
        </Button>

        
       
        
    </Grid>

   
</Window>
    
    
